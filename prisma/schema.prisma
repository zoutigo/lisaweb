generator client {
  provider = "prisma-client-js"
  // Explicit output to ensure the client is generated in the expected location
  output   = "../node_modules/.prisma/client"
  // Ship engines for local dev and o2switch (OpenSSL 1.0.x) + newer Debian (3.0.x)
  binaryTargets = ["native", "debian-openssl-1.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Rendezvous {
  id           String           @id @default(uuid())
  scheduledAt  DateTime
  reason       String           @db.VarChar(191)
  details      String           @db.Text
  createdAt    DateTime         @default(now())
  user         User?            @relation(fields: [userId], references: [id])
  userId       String?
  status       RendezvousStatus @default(PENDING)
  pendingToken String?          @unique
}

// NextAuth-compatible models (Prisma adapter). IDs are strings (cuid()) to match NextAuth defaults.
model User {
  id            String    @id @default(cuid())
  name          String?
  firstName     String?
  lastName      String?
  email         String?   @unique
  phone         String?   @db.VarChar(32)
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  rendezvous    Rendezvous[]
  isAdmin       Boolean   @default(false)
  createdAt     DateTime  @default(now())
}

model Partner {
  id        String   @id @default(uuid())
  name      String
  logoUrl   String?
  url       String?
  createdAt DateTime @default(now())
}

model SiteInfo {
  id         String   @id @default(uuid())
  name       String   @default("Site")
  email      String
  address    String?
  city       String?
  postalCode String?
  country    String?
  phone      String?
  updatedAt  DateTime @updatedAt
}

model CustomerCase {
  id          String   @id @default(uuid())
  title       String
  customer    String?
  description String
  url         String?
  imageUrl    String?
  isOnLandingPage Boolean @default(false)
  result1     String?
  result2     String?
  result3     String?
  result4     String?
  result5     String?
  feature1    String?
  feature2    String?
  feature3    String?
  feature4    String?
  feature5    String?
  createdAt   DateTime @default(now())
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Faq {
  id        String   @id @default(uuid())
  question  String   @db.Text
  answer    String   @db.Text
  category   FaqCategory? @relation(fields: [categoryId], references: [id])
  categoryId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum RendezvousStatus {
  PENDING
  CONFIRMED
}

model FaqCategory {
  id     String @id @default(uuid())
  name   String @db.VarChar(191)
  order  Int    @default(0)
  faqs   Faq[]
}

model ServiceOffer {
  id               String   @id @default(cuid())
  slug             String   @unique
  title            String
  subtitle         String?
  shortDescription String
  longDescription  String
  targetAudience   String
  priceLabel       String
  durationLabel    String
  engagementLabel  String
  isFeatured       Boolean  @default(false)
  order            Int      @default(0)
  ctaLabel         String
  ctaLink          String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  features         ServiceOfferFeature[]
  steps            ServiceOfferStep[]
  useCases         ServiceOfferUseCase[]
}

model ServiceOfferFeature {
  id      String        @id @default(cuid())
  offerId String
  label   String
  icon    String?
  order   Int           @default(0)
  offer   ServiceOffer  @relation(fields: [offerId], references: [id], onDelete: Cascade)
}

model ServiceOfferStep {
  id          String        @id @default(cuid())
  offerId     String
  title       String
  description String
  order       Int           @default(0)
  offer       ServiceOffer  @relation(fields: [offerId], references: [id], onDelete: Cascade)
}

model ServiceOfferUseCase {
  id          String        @id @default(cuid())
  offerId     String
  title       String
  description String
  offer       ServiceOffer  @relation(fields: [offerId], references: [id], onDelete: Cascade)
}
